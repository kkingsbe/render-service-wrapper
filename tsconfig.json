{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "baseUrl": "./src",
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "composite": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules", "build", "dist", "dist_local", ".serverless"],
  "include": ["**/*.ts", "**/*.js", "**/*.tsx"]
}